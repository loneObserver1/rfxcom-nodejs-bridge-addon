{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Home Assistant",
      "type": "shell",
      "command": "supervisor_run",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Build Add-on (amd64)",
      "type": "shell",
      "command": "docker run --rm --privileged -v ${workspaceFolder}/rfxcom-nodejs-bridge:/data -v /var/run/docker.sock:/var/run/docker.sock:ro ghcr.io/home-assistant/amd64-builder -t /data --all --test -i rfxcom-nodejs-bridge-{arch} -d local",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Build Add-on (local Docker)",
      "type": "shell",
      "command": "cd rfxcom-nodejs-bridge && docker build --build-arg BUILD_FROM=\"ghcr.io/home-assistant/amd64-base:latest\" -t local/rfxcom-nodejs-bridge .",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Run Add-on (local Docker)",
      "type": "shell",
      "command": "docker run --rm -v ${workspaceFolder}/rfxcom-nodejs-bridge/data:/data -p 8000:8000 local/rfxcom-nodejs-bridge",
      "problemMatcher": [],
      "group": "test"
    }
  ]
}



